{
  "version": 2,
  "builds": [
    { "src": "lessons/**/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/lessons/([^/]+)/?",
      "dest": "/lessons/$1/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Content-Security-Policy", "value": "frame-ancestors *" }
      ]
    }
  ]
}
